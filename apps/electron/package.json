{
  "name": "@festflow/electron",
  "version": "1.0.0",
  "private": true,
  "description": "FestFlow desktop application",
  "author": "FestFlow",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build": "electron-builder --mac --win"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.festflow.app",
    "productName": "FestFlow",
    "directories": {
      "output": "out"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "app/web/dist"
      },
      {
        "from": "../server/dist",
        "to": "app/server/dist"
      },
      {
        "from": "../server/package.json",
        "to": "app/server/package.json"
      },
      {
        "from": "../server/node_modules",
        "to": "app/server/node_modules"
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
