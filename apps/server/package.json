{
  "name": "@festflow/server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --ignore ../web/node_modules --ignore ../web/dist --ignore ../web/.vite src/index.ts",
    "build": "tsup src/index.ts --format esm --sourcemap --external vite --external @prisma/client",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.15.0",
    "@types/ws": "^8.5.12",
    "prisma": "^7.2.0",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
