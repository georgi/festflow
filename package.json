{
  "name": "festflow",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "db:setup": "pnpm -C apps/server db:generate && pnpm -C apps/server db:migrate && pnpm -C apps/server db:seed",
    "dev": "pnpm -C apps/server dev",
    "build": "pnpm -C apps/web build && pnpm -C apps/server build",
    "start": "pnpm -C apps/server start",
    "electron:start": "pnpm -C apps/electron start",
    "electron:build": "pnpm -C apps/electron build",
    "electron:build:mac": "pnpm -C apps/electron build:mac",
    "electron:build:win": "pnpm -C apps/electron build:win"
  },
  "dependencies": {
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "react-i18next": "^16.5.3"
  }
}
